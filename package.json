  },
  "license": "Apache 2.0",
  "scripts": {
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s . -o ./dist",
    "dev:server": "ts-node-dev --respawn --inspect --ignore-watch node_modules -r tsconfig-paths/register src/server.ts",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "deploy:production:setup": "pm2 deploy ecosystem.config.js production setup",
    "deploy:production": "pm2 deploy ecosystem.config.js production",
    "update:version": "yarn bump --all --commit --tag --push",
    "release": "yarn update:version && yarn deploy:production"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.3.3",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.1.1",
    "ts-node-dev": "^1.0.0-pre.62",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.0.2"
  }
}
