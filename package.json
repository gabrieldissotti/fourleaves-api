{
  "name": "fourleaves-api",
  "version": "0.0.1",
  "description": "fourleaves api",
  "main": "src/server.ts",
  "repository": "git@github.com:gabrieldissotti/fourleaves-api.git",
  "author": {
    "name": "Gabriel Dissotti do Nascimento Rodrigues",
    "email": "gabrieldnrodrigues@gmail.com",
